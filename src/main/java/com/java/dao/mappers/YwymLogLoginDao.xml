<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.java.dao.YwymLogLoginDao">

	<sql id="tableColumns">
			a.id AS "id",
		a.user_id AS "userId",
		a.create_date AS "createDate",
		a.update_date AS "updateDate"
	</sql>
	
	<sql id="fromTable">
		`ywym_log_login` a 
	</sql>
	
	<select id="get" resultType="YwymLogLogin">
		SELECT 
			<include refid="tableColumns"/>
		FROM 
			`ywym_log_login` a 
		WHERE a.id = #{id}
	</select>


    <select id="getForUpdate" resultType="YwymLogLogin">
        SELECT
        <include refid="tableColumns"/>
        FROM
        `ywym_log_login` a
        WHERE a.id = #{id} FOR UPDATE
    </select>

	
	<select id="getBy" resultType="YwymLogLogin">
		SELECT 
			<include refid="tableColumns"/>
		FROM 
			`ywym_log_login` a 
		WHERE a.${column} = #{value}
	</select>
	
	<select id="fromTable" resultType="YwymLogLogin">
		SELECT 
			<include refid="tableColumns"/>
		FROM 
			`ywym_log_login` a ${sql }
	</select>
	
	<select id="findListSQL" resultType="java.util.HashMap">
		${sql }
	</select>
	
    <select id="findList" resultType="YwymLogLogin">
        SELECT 
	        <include refid="tableColumns"/>
        FROM 
        	<include refid="fromTable"/>
        <where>
        	<include refid="whereSQL"/>
        </where>
        <choose>
			<when test="orderBy != null and orderBy != ''">
				ORDER BY ${orderBy}
			</when>
			<otherwise>
				ORDER BY a.create_date DESC
			</otherwise>
		</choose>
        <if test="first != null and max != null">
			LIMIT #{first},#{max}
		</if>
    </select>
    
    <sql id="whereSQL">
		<if test="userId != null and userId != ''">
    		AND a.user_id = #{userId}
    	</if>
		<if test="createDate != null ">
    		AND a.create_date = #{createDate}
    	</if>
		<if test="updateDate != null ">
    		AND a.update_date = #{updateDate}
    	</if>
	    <if test="createDateStart != null  and createDateEnd != null ">
    		AND a.create_date BETWEEN #{createDateStart} AND #{createDateEnd}
    	</if>
    	<if test="updateDateStart != null  and updateDateEnd != null ">
    		AND a.update_date BETWEEN #{updateDateStart} AND #{updateDateEnd}
    	</if>
    </sql>
    
    <insert id="insert">
		INSERT INTO ywym_log_login(
		    			id,
			user_id,
			create_date,
			update_date
		) VALUES (
		            	#{id},
        	#{userId},
        	#{createDate},
        	#{updateDate}
		)
	</insert>
	
	<update id="update">
		UPDATE ywym_log_login SET 	
		    			user_id = #{userId},
			create_date = #{createDate},
			update_date = #{updateDate}
		WHERE id = #{id}
	</update>
 	
 	<update id="delete">
		DELETE FROM ywym_log_login
		WHERE id = #{id}
	</update>
	
	<update id="exec">
		${sql }
	</update>
	
	<select id="getCount" resultType="Integer">
		SELECT 
			count(1) 
		FROM 
			<include refid="fromTable"/>
		<where>
			<include refid="whereSQL"/>
		</where>
	</select>
    
</mapper>